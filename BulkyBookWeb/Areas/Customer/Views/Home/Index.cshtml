@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row pb-3">
    <input class="form-control mb-5" placeholder="search"/>

    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="col-12 p-1" style="border:1px solid #008cba;border-radius:5px">
                <div class="card">
                    <img src="@product.ImageUrl" class="card-img-top rounded" height="250px" />
                    <div class="card-body">
                        <div class="px-1">
                            <p class="card-title h5 text-primary text-center">  @product.Title</p>
                            <p class="card-title h5 text-info">by @product.Author</p>
                        </div>
                        <div class="px-1">
                            <p>List Price : <span class="text-decoration-line-through">$@product.ListPrice.ToString("0.00")</span></p>
                            <p>As low As : <span>$@product.Price.ToString("0.00")</span></p>

                        </div>
                    </div>
                </div>
                <a asp-action="Details" class="btn btn-primary form-control" asp-route-productId="@product.Id">Details</a>
            </div>
        </div>
    }

</div>
