
@{
    ViewData["Title"] = "Index";
}



<div class="container p-3">
    <div class="row pt-4 pb-2">
        <h1 class="col-6 text-primary text-capitalize">Products List</h1>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary text-capitalize">
                <i class="bi bi-plus-circle mx-2"></i>
                Create New Product
            </a>
        </div>
    </div>


    <table class="table table-bordered table-striped w-100" id="productsTable">
        <thead>
            <tr class="text-center">
                <th >Title</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Price</th>
                <th>Category</th>
                <th>Cover Type</th>

                <th></th>
            </tr>
        </thead>
      
    </table>
</div>

@section Scripts{
    <script src="~/js//products.js"></script>
}